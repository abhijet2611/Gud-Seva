<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAB05C"
    tools:context=".Home">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/purple_200"
        app:itemIconTint="@drawable/select"
        app:itemTextColor="@drawable/select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation_bar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="222dp"
        android:layout_height="37dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:text="@string/appname"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="153dp"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gks" />

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="313dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:id="@+id/llcd2"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prdtxt2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Organic Gud"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pricetxt2"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="यह ऑर्गेनिक गुड़ बेहद पौष्टिक है"
                        tools:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView32"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/oj" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plusbtn2"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/qtytxt2"
                    android:layout_width="41dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/minusbtn2"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView102"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="   Rs 52/Kg   "
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addtocartbtn2"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="कार्ट में जोड़ें"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llcd"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prdtxt"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Choclate Gud"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pricetxt"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="चॉकलेट के साथ बहुत स्वादिष्ट गुड़"
                        tools:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cj" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plusbtn"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/qtytxt"
                    android:layout_width="41dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/minusbtn"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="   Rs 87/Kg   "
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addtocartbtn"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="कार्ट में जोड़ें"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>